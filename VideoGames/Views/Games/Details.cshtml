@model VideoGames.Models.GameReviews

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Games</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesItem.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesItem.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesItem.ReleaseDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesItem.ReleaseDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesItem.Genre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesItem.Genre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GamesItem.Price)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.GamesItem.Price)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.GamesItem.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@*Review*@
<div>
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].ReviewContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReviewList[0].PostDate)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ReviewList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReviewContent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostDate)
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddReview" asp-route-id="@Model.GamesItem.Id" method="POST">
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].Name)</label>
                <input id="reviewName" name="reviewName" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">@Html.DisplayNameFor(model => model.ReviewList[0].ReviewContent)</label>
                @Html.TextArea("reviewText", new { @class = "form-control" })
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>